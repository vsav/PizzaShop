		<![endif]-->
	</head>
	<body>
			<div class="container">
			<!-- Static navbar -->
				<nav class="navbar navbar-expand-lg navbar-light bg-light">
					<a class="navbar-brand" href="/">PizzaShop</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
						<div class="navbar-nav">
							<a class="nav-item nav-link active" href="/order">Order Pizza <span class="sr-only">(current)</span></a>
							<a class="nav-item nav-link" href="/about">About</a>
							<a class="nav-item nav-link right" href="/cart">Your Cart</a>
						</div>
					</div>
				</nav>
			<div>
			      <%if @error && @error.length > 0 then %>
			          <div class="alert alert-danger"><%=@error%></div>
			      <% end %>
			      <%= yield %>
			</div>

	</div>

  </body>
